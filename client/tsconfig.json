{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": ["ESNext", "DOM"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}